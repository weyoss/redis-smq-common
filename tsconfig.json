{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": false,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.cjs"]
}
