{
  "name": "redis-smq-common",
  "version": "3.0.0-rc.15",
  "description": "RedisSMQ Common Library provides many components that are mainly used by RedisSMQ and RedisSMQ Monitor.",
  "author": "Weyoss <weyoss@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "redis",
    "message queue",
    "message-queue",
    "message",
    "queue",
    "job queue",
    "job-queue",
    "jobs",
    "redis-smq",
    "priority",
    "priority queue",
    "priority-queue",
    "scheduler",
    "broker",
    "message broker",
    "message-broker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weyoss/redis-smq-common.git"
  },
  "homepage": "https://github.com/weyoss/redis-smq-common",
  "bugs": {
    "url": "https://github.com/weyoss/redis-smq-common/issues"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "@redis/client": "^1.6.0",
    "@types/bunyan": "^1.8.0",
    "bunyan": "^1.8.0",
    "ioredis": "^5.4.0"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "lodash": "4.17.21",
    "uuid": "11.0.5"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/bluebird": "3.5.36",
    "@types/debug": "4.1.7",
    "@types/jest": "29.5.8",
    "@types/lodash": "4.14.175",
    "@types/node": "18.18.9",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "11.1.2",
    "prettier": "3.4.2",
    "type-coverage": "2.29.7",
    "typescript": "5.7.3"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules scripts/test.sh --config jest.config.js",
    "test:cjs": "scripts/test.sh --config jest.config.cjs",
    "build": "scripts/build.sh",
    "release": "./scripts/release/release.sh",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests,types}/**/*.ts\"",
    "type-coverage": "type-coverage --strict --at-least 100  --ignore-files \"dist/**/*\"",
    "prepare": "husky install",
    "docs": "scripts/release/generate-docs.sh"
  },
  "lint-staged": {
    "*.(ts)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.(json|js)": [
      "prettier --write",
      "git add"
    ]
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18"
  }
}
